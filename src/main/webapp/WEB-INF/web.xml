<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <description>View mail attachement in browser</description>
        <servlet-name>attachview</servlet-name>
        <servlet-class>com.zaidsoft.webmail.AttachmentProviderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>attachview</servlet-name>
        <url-pattern>/attachview</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
